{
	"name": "great-reads",
	"version": "1.0.0",
	"license": "team0-unimelb-ITProject-2022",
	"type": "module",
	"scripts": {
		"start": "node --trace-warnings build",
		"dev": "node --trace-warnings build",
		"test_dev": "vite dev",
		"build": "npm run generate_prisma && vite build && npm run ipv6_fix",
		"ipv6_fix": "sed -i \"s/0.0.0.0/::/\" ./build/index.js",
		"generate_prisma": "npx prisma generate",
		"package": "svelte-kit package",
		"preview": "node build",
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"coverage": "nyc npm run test",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.18.9",
		"@playwright/test": "^1.26.0",
		"@sveltejs/adapter-node": "next",
		"@sveltejs/kit": "^1.0.0-next.484",
		"@tailwindcss/line-clamp": "^0.4.2",
		"autoprefixer": "^10.4.8",
		"babel-plugin-istanbul": "^6.1.1",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"nyc": "^15.1.0",
		"playwright-test-coverage": "^1.1.0",
		"postcss": "^8.4.16",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"prisma": "^4.4.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
		"typescript": "^4.8.2",
		"vite": "^3.1.3"
	},
	"dependencies": {
		"@lucia-sveltekit/adapter-prisma": "^0.3.3",
		"@prisma/client": "^4.4.0",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"esbuild": "^0.15.7",
		"lucia-sveltekit": "^0.8.6",
		"postcss-load-config": "^3.1.0"
	}
}